[flake8]
# Activate rules by plugins
extend-select =
    # flake8-assertive
    A,
    # flake8-bugbear
    B, B902, B903,
    # pydocstyle (by flake8-docstrings)
    D,
    # flake8-django
    DJ, DJ10, DJ11,

# just don't use these
ignore =
    # as per Django's Coding Style
    W601,
    # line break before binary operator
    W503,
    # line length (of code) is handled by black
    E501,

# and limit flake8 to the project's very own source code
exclude =
    .git,
    .tox,
    docs/source/conf.py,
    migrations,
    settings_dev.py,
    settings_test.py,

# be really strict about the line length of docstrings
max-doc-length = 79

# set the used convention for pydocstyle
docstring-convention = numpy
